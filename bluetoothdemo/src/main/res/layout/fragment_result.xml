<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultFragment"
    android:orientation="vertical"
    android:weightSum="10">

    <com.jjoe64.graphview.GraphView
        android:id="@+id/graph_bpm"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="4"
        android:layout_margin="12dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:weightSum="3"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                android:text="bpmPR"
                android:textColor="@android:color/primary_text_light"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/text_bpm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="66"
                android:textSize="48dp"
                android:gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                android:text="%SpO2"
                android:textColor="@android:color/primary_text_light"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/text_spo2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="99"
                android:textSize="48dp"
                android:gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                android:text="PI%"
                android:textColor="@android:color/primary_text_light"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/text_pi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="1.2"
                android:textSize="48dp"
                android:gravity="center"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorAccent"
            android:textColor="@android:color/primary_text_dark"
            android:padding="16dp"
            android:text="Analyze" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="3"
        android:orientation="vertical">
        <androidx.core.widget.ContentLoadingProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?android:attr/progressBarStyleHorizontal" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2"
            android:orientation="horizontal"
            android:padding="12dp">
            <LinearLayout
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/primary_text_light"
                    android:textSize="14dp"
                    android:text="SpO2 Analysis"
                    android:gravity="center"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/primary_text_light"
                        android:textSize="12dp"
                        android:text="AHI (Apnea-hypopnea index):"
                        android:gravity="start"
                        android:layout_weight="2"
                        android:layout_gravity="center"
                        android:layout_margin="4dp"/>
                    <TextView
                        android:id="@+id/ahi"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/primary_text_light"
                        android:textSize="12dp"
                        android:text="4"
                        android:gravity="start"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:layout_margin="4dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/primary_text_light"
                        android:textSize="12dp"
                        android:text="Minimum Oxygen Level:"
                        android:gravity="start"
                        android:layout_weight="2"
                        android:layout_gravity="center"
                        android:layout_margin="4dp"/>
                    <TextView
                        android:id="@+id/minspo2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/primary_text_light"
                        android:textSize="12dp"
                        android:text="85"
                        android:gravity="start"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:layout_margin="4dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/primary_text_light"
                        android:textSize="12dp"
                        android:text="Disease Severity:"
                        android:gravity="start"
                        android:layout_weight="2"
                        android:layout_gravity="center"
                        android:layout_margin="4dp"/>
                    <TextView
                        android:id="@+id/severity"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/primary_text_light"
                        android:textSize="12dp"
                        android:text="Nonne"
                        android:gravity="start"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:layout_margin="4dp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/primary_text_light"
                    android:textSize="14dp"
                    android:text="BPM Analysis"
                    android:gravity="center"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/primary_text_light"
                        android:textSize="12dp"
                        android:text="Minimum Heart Rate:"
                        android:gravity="start"
                        android:layout_weight="2"
                        android:layout_gravity="center"
                        android:layout_margin="4dp"/>
                    <TextView
                        android:id="@+id/minbpm"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/primary_text_light"
                        android:textSize="12dp"
                        android:text="85"
                        android:gravity="start"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:layout_margin="4dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/primary_text_light"
                        android:textSize="12dp"
                        android:text="Maximum Heart Rate:"
                        android:gravity="start"
                        android:layout_weight="2"
                        android:layout_gravity="center"
                        android:layout_margin="4dp"/>
                    <TextView
                        android:id="@+id/maxbpm"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/primary_text_light"
                        android:textSize="12dp"
                        android:text="90"
                        android:gravity="start"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:layout_margin="4dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/primary_text_light"
                        android:textSize="12dp"
                        android:text="Average Heart Rate:"
                        android:gravity="start"
                        android:layout_weight="2"
                        android:layout_gravity="center"
                        android:layout_margin="4dp"/>
                    <TextView
                        android:id="@+id/avgbpm"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/primary_text_light"
                        android:textSize="12dp"
                        android:text="87"
                        android:gravity="start"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:layout_margin="4dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/primary_text_light"
                        android:textSize="12dp"
                        android:text="Diagnosis:"
                        android:gravity="start"
                        android:layout_weight="2"
                        android:layout_gravity="center"
                        android:layout_margin="4dp"/>
                    <TextView
                        android:id="@+id/diagnosis"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/primary_text_light"
                        android:textSize="12dp"
                        android:text="Normal ECG"
                        android:gravity="start"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:layout_margin="4dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>